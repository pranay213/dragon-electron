{
  "name": "dragon-reel-app",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "description": "DragonReel - An immersive gaming experience",
  "author": "Your Name or Blocmatrix IT Solutions",
  "scripts": {
    "start": "electron -r dotenv/config main.js",
    "dev": "cross-env NODE_ENV=development electron -r dotenv/config main.js",
    "build:prod": "cross-env NODE_ENV=production PRODUCT_NAME=dragonreel APP_URL=https://www.dragonsreel.com/ electron-builder --win --config electron-builder.yml",
    "build:dev": "cross-env NODE_ENV=development PRODUCT_NAME=dragonreel-dev APP_URL=https://dragonsreel.blocmatrix.com/ electron-builder --win --config electron-builder.yml"
  },
  "build": {
    "appId": "com.dragonreel.app",
    "productName": "${PRODUCT_NAME}",
    "directories": {
      "output": "dist/${PRODUCT_NAME}"
    },
    "win": {
      "target": "portable",
      "icon": "assets/icons/icon.ico",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "certificateFile": "cert.pfx",
      "certificatePassword": ""
    },
    "extraMetadata": {
      "APP_URL": "${APP_URL}"
    }
  },
  "dependencies": {
    "@react-native/gradle-plugin": "^0.77.0",
    "expo": "^52.0.31",
    "expo-status-bar": "~2.0.1",
    "minimatch": "9.0.0",
    "react": "18.3.1",
    "react-dom": "^18.3.1",
    "react-native": "0.73.3",
    "react-native-web": "^0.19.13",
    "react-native-webview": "^13.13.2",
    "react-scripts": "^5.0.1",
    "yarn": "^1.22.19",
    "dotenv": "^16.4.5",
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8"
  }
}
