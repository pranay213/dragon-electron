{
  "name": "dragon-reel-app",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron main.js ",
    "build": " electron-builder --win --ia32  ",
    "start:dev": "cross-env NODE_ENV=development electron main.js",
    "start:prod": "cross-env NODE_ENV=production electron main.js",
    "build:dev": "electron-builder --win --ia32",
    "build:prod": "electron-builder --win --ia32"
  },
  "build": {
    "appId": "com.dragonreel.app",
    "productName": "dev-dragonreel",
    "win": {
      "target": "portable",
      "icon": "/assets/icons/icon.ico",
      "signingHashAlgorithms": [
        "sha256"
      ],
      "certificateFile": "cert.pfx",
      "certificatePassword": ""
    }
  },
  "dependencies": {
    "@react-native/gradle-plugin": "^0.77.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "expo": "^52.0.31",
    "expo-status-bar": "~2.0.1",
    "minimatch": "9.0.0",
    "react": "18.3.1",
    "react-dom": "^18.3.1",
    "react-native": "0.73.3",
    "react-native-web": "^0.19.13",
    "react-native-webview": "^13.13.2",
    "react-scripts": "^5.0.1",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8"
  }
}
